% bamlab.sty -- common packages and settings for BAM Applied Math Lab
\ProvidesPackage{bamlab}[2026/01/22 BAM Applied Math Lab common style]

% Encoding, language, math, graphics and layout
\RequirePackage[utf8]{inputenc}
\RequirePackage[english]{babel}
\RequirePackage{amsmath}
\RequirePackage{amssymb}
\RequirePackage{graphicx}
\RequirePackage{geometry}
\geometry{margin=1in}

% Listings and colors for code blocks
\RequirePackage{listings}
\RequirePackage{xcolor}
\definecolor{codegreen}{rgb}{0,0.6,0}
\definecolor{codegray}{rgb}{0.5,0.5,0.5}
\definecolor{codepurple}{rgb}{0.58,0,0.82}
\definecolor{backcolour}{rgb}{0.95,0.95,0.92}

\lstdefinestyle{pythonstyle}{
    backgroundcolor=\color{backcolour},
    commentstyle=\color{codegreen},
    keywordstyle=\color{magenta},
    numberstyle=\tiny\color{codegray},
    stringstyle=\color{codepurple},
    basicstyle=\ttfamily\footnotesize,
    breakatwhitespace=false,
    breaklines=true,
    captionpos=b,
    keepspaces=true,
    numbers=left,
    numbersep=5pt,
    showspaces=false,
    showstringspaces=false,
    showtabs=false,
    tabsize=2,
    language=Python
}

\lstset{style=pythonstyle}

% Hyperlinks
\RequirePackage{hyperref}

% Paragraph formatting
\setlength\parindent{0pt}

% Small gaps in itemize/enumerate
\RequirePackage{enumitem}
\setlist{itemsep=0.2em}

\usepackage{fancyhdr}  % To edit the header (add logo)

% Adjust the header for the first page
\fancypagestyle{plain}{
    \fancyhf{}  % clear all header and footer fields
    \rhead{\includegraphics[height=1cm]{../img/ie_logo.png}}
    \renewcommand{\headrulewidth}{0pt}
    \renewcommand{\footrulewidth}{0pt}
    \setlength{\headheight}{62pt}
    \addtolength{\topmargin}{-20pt}
}

% Package loaded
\endinput
